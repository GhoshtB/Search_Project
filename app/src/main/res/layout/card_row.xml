<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/size_small">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/size_padd"
        app:cardElevation="@dimen/size_padd"

        app:cardCornerRadius="@dimen/size_small">
<FrameLayout
    android:layout_width="2dp"
    android:layout_height="match_parent"
    android:background="@color/card_corner"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
android:layout_marginBottom="@dimen/size_large"
            android:padding="@dimen/size_large">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:lines="1"
                android:padding="@dimen/size_small"
                android:text="ICICI"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
android:padding="@dimen/size_small"
                        android:fontFamily="@font/montserrat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:textColor="@android:color/darker_gray"
                        android:lines="1"
                        android:textStyle="normal"
                        android:ellipsize="end"
                        android:text="Min SIP Amount :"/>
                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:textColor="@android:color/black"
                        android:lines="1"
                        android:textStyle="normal"
                        android:ellipsize="end"
                        android:text="₹5000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_small"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal"
                    android:textColor="@android:color/darker_gray"
                    android:lines="1"
                    android:ellipsize="end"
                        android:text="Max SIP Amount :"/>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:textColor="@android:color/black"
                        android:lines="1"
                        android:textStyle="normal"
                        android:ellipsize="end"
                        android:text="₹6000"/>
                </LinearLayout>

            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:padding="@dimen/size_small"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_large"
                android:paddingLeft="@dimen/size_small">

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:textColor="@android:color/darker_gray"
                    android:lines="1"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:text="ICICI"/>

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="@dimen/size_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="5,10,15,20"/>
                <TextView
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="@dimen/size_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="of every month"/>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/rLayout"
                android:layout_marginTop="@dimen/size_large"
                android:padding="@dimen/size_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <EditText
                    android:id="@+id/fund_edit"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:background="@color/edit_back"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:hint="Enter Sip Amount"
                    android:padding="@dimen/size_small"
                    android:layout_height="40dp" />

            <Button
                android:id="@+id/btnFund"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Add Fund"
                android:textSize="@dimen/text_small"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/add_text"
android:layout_gravity="end|bottom"
            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_small"
            android:textSize="@dimen/text_small"
            android:layout_marginRight="@dimen/size_large"
            android:textStyle="normal"
            android:textColor="@color/colorPrimary"
            android:lines="1"
            android:ellipsize="end"
            android:text="+Add"/>
    </android.support.v7.widget.CardView>
</LinearLayout>